[alias]
    nuke = !sh -c 'git branch -D $1 && git push origin :$1' -
[diff]
    tool = kdiff3

[merge]
    tool = kdiff3

[mergetool "kdiff3"]
    path = /usr/local/bin/kdiff3
    keepBackup = false
    trustExitCode = false

[difftool "kdiff3"]
    path = /usr/local/bin/kdiff3
    keepBackup = false
    trustExitCode = false

